<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyStylesPracticeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreenColor</item>
        <item name="colorPrimaryVariant">@color/primaryGreenDarkColor</item>
        <item name="colorOnPrimary">@color/primaryGreenLightColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryGreenColor</item>
        <item name="colorSecondaryVariant">@color/secondaryGreenDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryGreenLightColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="EditTextTheme" parent="android:style/Widget.EditText">
        <item name="android:background">@color/secondaryGreenColor</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">@dimen/editViewHeight</item>
    </style>

    <style name="TextViewTheme" parent="android:style/Widget.TextView">
        <item name="android:background">@color/primaryGreenDarkColor</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:layout_width">@dimen/editTextWidth</item>
        <item name="android:layout_height">@dimen/editViewHeight</item>
    </style>

    <style name="ButtonTheme" parent="android:style/Widget.Button">
        <item name="android:background">@color/primaryGreenColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/editTextPadding</item>
        <item name="android:layout_width">@dimen/buttonWidth</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
    </style>
</resources>